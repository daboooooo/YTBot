# YTBot Configuration Example
# Copy this file to .env and update with your values

# =============================================================================
# REQUIRED CONFIGURATION
# =============================================================================

# Telegram Bot Token (Required)
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Admin Chat ID (Required)
# Get your chat ID by sending /start to @userinfobot
ADMIN_CHAT_ID=your_admin_chat_id

# =============================================================================
# NEXTCLOUD CONFIGURATION (Optional)
# =============================================================================

# Nextcloud Server URL (Optional)
# Leave empty to disable Nextcloud integration
NEXTCLOUD_URL=http://your-nextcloud-server.com

# Nextcloud Credentials (Optional)
NEXTCLOUD_USERNAME=your_username
NEXTCLOUD_PASSWORD=your_password

# Nextcloud Upload Directory (Optional)
# Directory where files will be uploaded
NEXTCLOUD_UPLOAD_DIR=/YTBot

# Nextcloud Connection Settings (Optional)
NEXTCLOUD_CHUNK_SIZE=8388608
NEXTCLOUD_TIMEOUT=600
NEXTCLOUD_CONNECTION_RETRIES=3
NEXTCLOUD_CONNECTION_RETRY_DELAY=5.0
NEXTCLOUD_UPLOAD_RETRIES=3
NEXTCLOUD_UPLOAD_RETRY_DELAY=5.0

# =============================================================================
# LOCAL STORAGE CONFIGURATION
# =============================================================================

# Local Storage Path
LOCAL_STORAGE_PATH=./downloads

# Enable Local Storage (Default: true)
LOCAL_STORAGE_ENABLED=true

# Maximum Storage Size in MB (Default: 10GB)
LOCAL_STORAGE_MAX_SIZE_MB=10240

# Cleanup After Days (Default: 7 days)
LOCAL_STORAGE_CLEANUP_AFTER_DAYS=7

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================

# Maximum Concurrent Downloads (Default: 5)
MAX_CONCURRENT_DOWNLOADS=5

# Log Level (Default: INFO)
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log File (Default: ytbot.log)
LOG_FILE=ytbot.log

# Log Rotation Settings
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# =============================================================================
# DOWNLOAD CONFIGURATION
# =============================================================================

# Download Timeout in Seconds (Default: 1 hour)
DOWNLOAD_TIMEOUT=3600

# Retry Configuration
MAX_RETRY_COUNT=3
INITIAL_RETRY_DELAY=1.0

# yt-dlp Version Check
CHECK_YT_DLP_VERSION=true
VERSION_CHECK_TIMEOUT=10

# Download Options
DOWNLOAD_QUIET=false
DOWNLOAD_NO_WARNINGS=false
DOWNLOAD_RETRIES=3
DOWNLOAD_FRAGMENT_RETRIES=10
DOWNLOAD_IGNORE_ERRORS=true

# User Agent for Downloads
DOWNLOAD_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36

# Audio Configuration
AUDIO_FORMAT=bestaudio/best
AUDIO_CODEC=mp3
AUDIO_QUALITY=192

# Video Configuration
VIDEO_FORMAT=bestvideo[ext=mp4]+bestaudio[ext=m4a]/best[ext=mp4]/best
VIDEO_OUTPUT_FORMAT=mp4

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# Monitoring Interval in Seconds (Default: 1 hour)
MONITOR_INTERVAL=3600

# Health Check Thresholds
MIN_DISK_SPACE=1024
MAX_CPU_LOAD=0.8
MEMORY_THRESHOLD=512

# User State Timeout in Seconds (Default: 5 minutes)
USER_STATE_TIMEOUT=300

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# SSL Certificate Verification (Default: false for self-signed certificates)
CHECK_CERTIFICATE=false

# =============================================================================
# ADVANCED CONFIGURATION
# =============================================================================

# Progress Update Interval in Seconds
PROGRESS_UPDATE_INTERVAL=10

# Sleep Intervals (to avoid rate limiting)
SLEEP_INTERVAL_REQUESTS=0.5
SLEEP_INTERVAL=2
MAX_SLEEP_INTERVAL=10

# Socket Timeout
DOWNLOAD_SOCKET_TIMEOUT=20

# Merge Output Format
MERGE_OUTPUT_FORMAT=mp4

# =============================================================================
# EXAMPLE VALUES
# =============================================================================

# Example Telegram Bot Token (DO NOT USE - GET YOUR OWN)
# TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz

# Example Admin Chat ID (DO NOT USE - GET YOUR OWN)
# ADMIN_CHAT_ID=123456789

# Example Nextcloud URL
# NEXTCLOUD_URL=https://cloud.example.com

# Example Local Storage Path
# LOCAL_STORAGE_PATH=/home/user/ytbot/downloads